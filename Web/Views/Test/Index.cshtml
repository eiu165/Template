@section scripts{
<script type="text/javascript">
     
    $(function () { 
        $("#a").click(function () { 
            var album = {
                AlbumName: "PowerAge",
                Entered: "1/1/1977"
            }  

            $.ajax(
            {
                url: "api/albums",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ Album: album  }),
                success: function (result) {
                    alert(result.Result);
                }
            });
        });
        
        $("#b").click(function () { 
            $.ajax(
            {
                url: 'api/albums',
                type: "GET", 
                success: function (result) {
                    alert(result.Result);
                } 
            });
        });

    });

</script>
}